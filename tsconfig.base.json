{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
    // "example/*.ts",
    // "test/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
